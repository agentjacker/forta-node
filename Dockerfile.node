FROM alpine:3.18.3 AS base

FROM golang:1.19 AS go-builder
WORKDIR /go/app
COPY go.mod .
COPY go.sum .

RUN go mod download

COPY . /go/app

RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /go/app/main /go/app/cmd/node/main.go

FROM base
COPY --from=go-builder /go/app/main /forta-node
EXPOSE 8089 8090
